<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>{{title}}</title>
  <link rel="stylesheet" href="/css/master.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.js"></script>
</head>

<body>
  <div class="top-bar">
    <div class="links-wrapper">
      <div class="links">
        <a href="/">Home</a>
      </div>
      <div class="links">
        <a href="/newPost">Create New Post</a>
      </div>
      <div class="links">
        {{#user}}
          <a href="/{{userID}}/profilepage">Logged in as {{user}}</a>
        {{/user}}
        {{^user}}
        <a href="/login">Log in</a>
        {{/user}}
      </div>
      <div class="links">
        <a href="/logout">Log Out</a>
      </div>
    </div>
    <div class="title">
      <h2>Gabble</h2>
    </div>
  </div>
  <div class="body_wrapper">
      <div class="post_wrapper">
        <div class="top_line">
          <span class="post_title">{{post.title}}</span>
        </div>
        <div class="username">
          <span class="author">By:   {{post.username.username}}</span>
        </div>
        <div class="message">
          <span>{{post.body}}</span>
        </div>
        <div class="bot_line">
          <span class="publish_date">Published: <span class="publishDateLong">{{post.createdAt}}</span></span><br />
        </div>

        <div class="like_list">
          Liked by:
          <ul>
            {{#likes}}
            <li>{{user.username}}</li>
            {{/likes}}
          </ul>
        </div>
      </div>
  </div>
</div>
<script src="/js/client.js" charset="utf-8"></script>
</body>

</html>
